<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="choicebot.gui.MainWindow">

    <!-- Scrollable chat area -->
    <children>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background: #ECE5DD; -fx-border-color: transparent;"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="8"
                      style="-fx-background-color: #ECE5DD; -fx-padding: 10;"
                      prefWidth="388.0" />
            </content>
        </ScrollPane>

        <!-- Input bar -->
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="40.0"
                   promptText="Type a message..."
                   style="-fx-background-radius: 18; -fx-padding: 0 12 0 12;"
                   AnchorPane.leftAnchor="10.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.rightAnchor="70.0" />

        <Button fx:id="sendButton"
                onAction="#handleUserInput"
                text="âž¤"
                prefHeight="40.0"
                prefWidth="50.0"
                style="-fx-background-color: #128C7E;
                       -fx-text-fill: white;
                       -fx-background-radius: 20;"
                AnchorPane.rightAnchor="10.0"
                AnchorPane.bottomAnchor="5.0" />
    </children>
</AnchorPane>
